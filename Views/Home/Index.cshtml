@using Portfolio_Blog.Models
@using PagedList
@using PagedList.Mvc
@model IEnumerable<BlogPost>

   
    <!-- Hero Section-->
    <section style="background: url(/img/dice.jpg); background-size: cover; background-position: center center" class="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    @*<h1>Bootstrap 4 Blog - A free template by Bootstrap Temple</h1><a href="#" class="hero-link">Discover More</a>*@
                    <h1>Michael Carreno's Blog</h1>
                    <p>A blog detailing my daily life and learnings.</p>
                </div>
            </div><a href=".featured-posts" class="continue link-scroll"><i class="fa fa-long-arrow-down"></i> Explore</a>
        </div>
    </section>
    <!-- Intro Section-->
    <section class="intro">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <h2 class="h3">A brief intro</h2>
                    <p class="text-big">I enjoy breaking code and sometimes fixing it. I am also a Kendrick Lamar enthusiast.</p>
                </div>
            </div>
        </div>
    </section>
    <section class="featured-posts no-padding-top">
        <div class="container">


            @{ var counter = 1; }
            @foreach (var post in Model)
            {

                if (counter % 2 == 0)
                {
                    <!-- Post-->
                    <div class="row ">
                        <div class="text col-lg-7">

                            <div class="text-inner d-flex align-items-center">
                                <div class="content">
                                    <header class="post-header">
                                        <div class="category">
                                           
                                        </div>
                                        @*<a href="@Url.Action("Details", "BlogPosts")">
                <h2 class="h4">@post.Title</h2>
            </a>*@
                                        @*@Html.ActionLink("Details", "Details", new { slug = post.Slug })*@
                                        @Html.ActionLink(post.Title, "Details", "BlogPosts", new { slug = post.Slug }, new { @class = "h4" })


                                    </header>
                                    <script>
                                        ellipsify(@post.Body);
                                    </script>
                                    <footer class="post-footer d-flex align-items-center">
                                        <a href="#" class="author d-flex align-items-center flex-wrap">
                                            <div class="avatar"><img src="~/img/Default_Avatar.png" alt="..." class="img-fluid"></div>
                                            <div class="title"><span>Michael Carreno</span></div>
                                        </a>
                                        <div class="date"><i class="icon-clock"></i>@post.Created.ToString("MMM dd, yyyy")</div>
                                        <div class="comments"><i class="icon-comment"></i>@post.Comments.Count()</div>
                                    </footer>
                                </div>
                            </div>
                        </div>
                        <div class="image col-lg-5">

                            @if (post.MediaUrl != null)
                            {<img class="img" src="@post.MediaUrl" alt="">
                            }
                        </div>
                    </div>


                }
                else
                {
                    <!-- Post-->
                    <div class="row d-flex align-items-stretch">
                        <div class="image col-lg-5">

                            @if (post.MediaUrl != null)
                            {<img class="img" src="@post.MediaUrl" alt="">
                            }
                        </div>
                        <div class="text col-lg-7">
                            <div class="text-inner d-flex align-items-center">
                                <div class="content">
                                    <header class="post-header">
                                        <div class="category">
                                         
                                        </div>
                                        @*<a href="post.html">
                                            <h2 class="h4">@post.Title</h2>
                                        </a>*@
                                        @*@Html.ActionLink("Details", "Details", new { slug = post.Slug })*@
                                        @Html.ActionLink(post.Title, "Details", "BlogPosts", new { slug = post.Slug }, new { @class = "h4" })

                                    </header>
                                   
                                    <script>
                                        ellipsify(@post.Body);
                                    </script>
                                    <footer class="post-footer d-flex align-items-center">
                                        <a href="#" class="author d-flex align-items-center flex-wrap">
                                            <div class="avatar"><img src="~/img/Default_Avatar.png" alt="..." class="img-fluid"></div>
                                            <div class="title"><span>Michael Carreno</span></div>
                                        </a>
                                        <div class="date"><i class="icon-clock"></i>@post.Created.ToString("MMM dd, yyyy")</div>
                                        <div class="comments"><i class="icon-comment"></i>@post.Comments.Count()</div>
                                    </footer>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                counter++;
            }


        </div>
    </section>


    <!-- Divider Section-->
    <section style="background: url(/img/divider-bg.jpg); background-size: cover; background-position: center bottom" class="divider">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h2></h2><a href=".navbar" class="continue link-scroll">Back to Top</a>
                </div>
            </div>
        </div>
    </section>
   


    <script>

 

    </script>
